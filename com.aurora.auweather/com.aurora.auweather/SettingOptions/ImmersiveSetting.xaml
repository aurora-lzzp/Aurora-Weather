    <Page.DataContext>
        <ViewModels:ImmersiveSettingViewModel x:Name="Context"/>
    </Page.DataContext>

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary Source="../Themes/LightThemeDictionary.xaml" x:Key="Light"/>
                <ResourceDictionary Source="../Themes/DarkThemeDictionary.xaml" x:Key="Dark"/>
            </ResourceDictionary.ThemeDictionaries>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Converters:ImmersiveStatetoSwitchConverter x:Key="ImmersiveStatetoSwitchConverter" />
            <Converters:ImmersiveStatetoEnableConverter x:Key="ImmersiveStatetoEnableConverter" />
        </ResourceDictionary>
    </Page.Resources>

    <Pivot x:Name="Root" Padding="12,8,12,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <PivotItem x:Uid="Sunny" Header="Sunny">
            <ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <StackPanel Orientation="Vertical">
                    <Grid Margin="12,0,12,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <TextBlock x:Uid="NoBGText" Margin="8" VerticalAlignment="Center" />
                        <ToggleSwitch IsOn="{Binding SunnyState, Converter={StaticResource ImmersiveStatetoSwitchConverter},Mode=TwoWay}" Style="{ThemeResource NarrowSwitch}" Margin="8" HorizontalAlignment="Right" VerticalAlignment="Center" />
                    </Grid>
                    <ListView SelectionChanged="List_SelectionChanged" IsEnabled="{Binding SunnyState, Converter={StaticResource ImmersiveStatetoEnableConverter}}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="SunnyList">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid MaxWidth="720" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Image HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="16" Source="{Binding Thumbnail}" Stretch="UniformToFill" />
                                    <TextBlock HorizontalAlignment="Right" Foreground="White" VerticalAlignment="Bottom" Margin="24" FontSize="12" Text="{Binding Title}"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <Grid x:Name="SunnyLocalGrid" Visibility="Collapsed" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Image x:Name="SunnyLocal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MaxWidth="720" Stretch="UniformToFill" Margin="16" />
                        <Button Click="LocalButton_Click" IsEnabled="{Binding SunnyState, Converter={StaticResource ImmersiveStatetoEnableConverter}}" x:Name="SunnyLocalButton" HorizontalAlignment="Right" VerticalAlignment="Top" Style="{ThemeResource TextBlockButtonStyle}" Margin="8" >
                            <Button.Content>
                                <SymbolIcon Height="64" Width="64" Symbol="Cancel" />
                            </Button.Content>
                        </Button>
                    </Grid>
                    <Button x:Name="SunnyButton" Click="Button_Click" IsEnabled="{Binding SunnyState, Converter={StaticResource ImmersiveStatetoEnableConverter}}" Height="36" Margin="12,12,12,64" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                </StackPanel>
            </ScrollViewer>
        </PivotItem>
